<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.Selling2Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="의류에 대한 정보를\n입력해주세요."
            android:textColor="@color/black_title"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/info_1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/btn_info_1"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/info_2"
            app:layout_constraintEnd_toStartOf="@+id/info_2"
            app:layout_constraintTop_toTopOf="@+id/info_2" />

        <ImageView
            android:id="@+id/info_2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/btn_info_2"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/info_3"
            app:layout_constraintEnd_toStartOf="@+id/info_3"
            app:layout_constraintTop_toTopOf="@+id/info_3" />

        <ImageView
            android:id="@+id/info_3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/btn_info_3"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />
        <ImageView
            android:id="@+id/info_4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/btn_info_4"
            app:layout_constraintBottom_toBottomOf="@+id/info_3"
            app:layout_constraintStart_toEndOf="@+id/info_3"
            app:layout_constraintTop_toTopOf="@+id/info_3" />
        <ImageView
            android:id="@+id/info_5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/btn_info_5"
            app:layout_constraintBottom_toBottomOf="@+id/info_4"
            app:layout_constraintStart_toEndOf="@+id/info_4"
            app:layout_constraintTop_toTopOf="@+id/info_4" />


        <FrameLayout
            android:id="@+id/info_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_5" />


        <ImageView
            android:id="@+id/btn_go_selling3"
            android:layout_width="298dp"
            android:layout_height="45dp"
            android:src="@drawable/btn_go_selling_disable"
            android:layout_marginBottom="90dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/info_fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>